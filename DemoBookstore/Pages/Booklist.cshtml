@page
@model DemoBookstore.Pages.BooklistModel
@{
}
    <table class="table">
        @foreach (var book in Model.Book)
        {
            <tr>
                <td>

                    <div class="thumbnail" style="width:70%">

                        <img alt="@book.Name" src="@book.Image" />
                        <h4 class="align-content-sm-center">
                            @book.Name
                        </h4>
                        <h5>
                            @book.Author
                        </h5>
                        <a asp-page="./List" asp-route-id="@book.Id" class="btn btn-outline-primary"> more Details</a>
                        <a asp-page="./Add" asp-route-id="@book.Id" class="btn btn-outline-primary"> Delete</a>

                    </div>
                </td>
            </tr>
        }
    </table>
    